<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
android:background = "#00000F" android:orientation="vertical" android:layout_width="fill_parent" 
android:layout_height="fill_parent" android:id="@+id/rootLayout">
	<TextView
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" android:text="Series"
	android:textSize="14px"
	android:textStyle="bold"
	android:textColor="#FFFFF0"
	 />	
	<ListView android:id="@+id/lvSeries" android:layout_weight = "8"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:scrollbarSize="4px"
		android:layout_marginTop="35px" android:layout_marginBottom="10px" android:focusable = "true"
		android:clickable = "true"
		android:background = "#00000F"
		android:cacheColorHint="#00000F"
		
	/>
	
</LinearLayout>
