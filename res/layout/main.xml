    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000F"
    android:gravity="center_vertical"
    >
    <LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#00000F"
    android:gravity="center_horizontal"
    >
    	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Series Manager" android:textStyle="bold" android:textColor="#FFFFF0" />
     	<ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/series"></ImageView>
	</LinearLayout>
</LinearLayout>
